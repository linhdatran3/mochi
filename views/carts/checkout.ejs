
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Chi tiết đơn hàng:</h4>
            <form action="/cart/order" method="POST">
                <div class="row">
                    <div class="col-lg-7 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Họ và tên:<span>*</span></p>
                                    <input type="text" value="<%=nameCus%>">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Giới tính:<span>*</span></p>
                                    <!-- <input type="text"> -->
                                    <select id = "gender">
                                        <option value="nam" selected>Nam</option>
                                        <option value="nu" >Nữ</option>
                                        <option value="khac" >Khác</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ:<span>*</span></p>
                            <input type="text" placeholder="Street Address" class="checkout__input__add" name="address">
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Điện thoại:<span>*</span></p>
                                    <input type="text" name="phone">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                   
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn:</h4>
                      
                        
                                <%
                                    products.forEach(pro=>{%>
                                        <div>
                                            <%= pro.item.name %> : (<%=pro.qty %>)
                                            <span>--</span>
                                            <%= pro.item.price*pro.qty %>
                                        </div>
                                    <%})
                                    %>
                            
                            <div class="checkout__order__total"> <h2>Total: <%= total %></h2></div>
                           
                                <button type="submit" class="site-btn" >Xác nhận</button>
                            
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>