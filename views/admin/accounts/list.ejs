<div class="container mt-5">
   
    <a type="button" class="btn btn-primary btn-lg" href="/admin/register">Register new admin</a>
   
    <h1>List User</h1>
    <table class="table table-dark table-hover">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Password</th>
            
            <th>Delete</th>
        </tr>
        <% users.map(user=>{%>
           
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td><%= user.password %></td>
                    
                    <td> 
                        <form action="/admin/account/<%= user._id %>?_method=DELETE" method="POST" >
                            <input type="submit" value="Delete" class="btn btn-danger" >
                            </form>
                    </td>
                </tr>
          
            
           
        <%})
        %>
        
      
            
    </table>
</div>