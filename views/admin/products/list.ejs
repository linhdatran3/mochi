<div class="container mt-5">
    <a type="button" class="btn btn-primary btn-lg" href="/admin/product/add">Add New Product</a>
    <h1>List Product</h1>

    <table class="table table-dark table-hover">
        <tr>
            <th> Name</th>
            <th> Info</th>
            <th> Price</th>
            <th> Quantity</th>
            <th>Image</th>
            <th> Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        
            <% 
                products.map(Product=>{%>
                    <tr>
                    <td><%= Product.name %></td>
                    <td><%= Product.info %></td>
                    <td><%= Product.price %></td>
                    <td><%= Product.quantity %></td>
                    <td><img src="<%= Product.image %>" alt="" width="50px"></td>
                    <td><%
                        if(Product.category)
                        {%> 
                        <%=  Product.category.name %> 
                        <%}
                        %>
                    </td>
                    <td><a href="/admin/product/edit/<%= Product._id %>"  class="btn btn-warning">Edit</a></td>
                    <td>
                        <form action="/admin/product/<%= Product._id %>?_method=DELETE" method="POST" >
                            <input type="submit" value="Delete" class="btn btn-danger" >
                            </form>
                    </td>
                </tr>
                <%})
            %>
            
    </table>
</div>