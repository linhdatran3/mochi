

  <div class="container product-wrapper " style="padding-bottom:2rem;background: #fff">

    <div class="row">
      <!-- /.col-lg-3 category -->
      <div class="col-lg-3 category ThuMuc_edit" >

        <h1 class="my-4">DANH MUC</h1>
        <div class="list-group">
          <a href="/shop-homepage/Giấy note" class="list-group-item">Giấy note cute</a>
          <a href="/shop-homepage/Túi" class="list-group-item">Túi đựng giấy</a>
          <a href="/shop-homepage/Bút" class="list-group-item">Bút các loại</a>
          <a href="/shop-homepage/Đồ thủ công" class="list-group-item">Đồ thủ công</a>
          <a href="/shop-homepage/Khác" class="list-group-item">Khác</a>
        </div>

      </div>

      <!-- /.col-lg-9 product & product banner -->
      <div class="col-lg-9">
        <!-- product_banner -->
        <div id="carouselExampleIndicators" style="max-width: 2000px;width:100%;" class="carousel slide "
          data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div id="list" class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="img-fluid" src="./img/shop/banner3.PNG" alt="Third slide">              
            </div>
            
            <div class="carousel-item">
              <img class=" img-fluid" src="./img/shop/banner2.PNG" alt="Second slide">
            </div>
            <div class="carousel-item">          
              <img class="img-fluid" src="./img/shop/banner3.PNG" alt="First slide">              
            </div>
            
          </div>
          <a class="carousel-control-prev" href="/carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="/carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- product -->
        <div class="container my-3">
          <div class="row">
          <%
          products.map(product=>{%>
              <div class="col-sm-6 col-md-4">
                  <div class="product-cart">
                      <div class="img">
                          <a href="/shop/<%= product._id %>">
                            <img src="<%= product.image %>" alt="<%= product.name %>">
                          </a>
                          
                      </div>
                      <div class="contain">
                          <p class="name"><%= product.name %></p>
                          <p><%= product.info %>
                          </p>
                         
                         <div class="text-center">
                          <a href="/cart/add/<%= product._id %>" class=" addCart btn btn-primary px-5 mt-2 ">Add to Cart</a>
                         </div>
                      </div>
                  </div>
              </div>
          <%})
          %>
      </div>
      </div>
        <!-- /.row -->
      </div>


    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

